<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangepinkgradient"
    tools:context=".Login">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@null"
        android:src="@drawable/yellowbusround"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@+id/logo"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:id="@+id/userview"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userview"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:inputType="text"
        android:id="@+id/useredit" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password "
        android:id="@+id/passview"
        android:layout_below="@+id/userview"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passedit"
        android:layout_toRightOf="@+id/passview"
        android:layout_below="@+id/userview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:inputType="textWebPassword"
        android:focusableInTouchMode="true"
        />

    <Button
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/clibutton"
        android:textColor="#FAFAFA"
        android:backgroundTint="#F88F0C"
        android:onClick="login"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forpass"
        android:text="forgot password?"
        android:layout_below="@+id/clibutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@null"
        android:clickable="true"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:text="Don't have an account yet ?"
        android:layout_below="@+id/forpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@null"
        android:clickable="true"

        />

